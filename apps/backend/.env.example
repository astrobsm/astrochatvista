# ============================================================================
# CHATVISTA - Environment Configuration
# ============================================================================

# Application
NODE_ENV=development
PORT=4000
APP_NAME=ChatVista
APP_URL=http://localhost:3000
API_URL=http://localhost:4000

# Database
DATABASE_URL="postgresql://chatvista:chatvista_secure_2024@localhost:5432/chatvista?schema=public"

# Redis
REDIS_URL="redis://:chatvista_redis_2024@localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=chatvista_redis_2024

# JWT & Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=your-session-secret-change-in-production

# Encryption Keys (32 bytes hex for AES-256)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
SIGNING_KEY=fedcba9876543210fedcba9876543210fedcba9876543210fedcba9876543210

# MinIO / S3 Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=chatvista
MINIO_SECRET_KEY=chatvista_minio_2024
MINIO_BUCKET_RECORDINGS=chatvista-recordings
MINIO_BUCKET_DOCUMENTS=chatvista-documents
MINIO_BUCKET_AVATARS=chatvista-avatars

# Local Device Storage
CHATVISTA_STORAGE_PATH=./chatvista-storage

# Digital Ocean Spaces (Cloud Storage)
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=chatvista-storage
DO_SPACES_ACCESS_KEY=your-spaces-access-key
DO_SPACES_SECRET_KEY=your-spaces-secret-key
DO_SPACES_CDN_ENDPOINT=https://chatvista-storage.nyc3.cdn.digitaloceanspaces.com

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_TRANSCRIPTS=transcripts
ELASTICSEARCH_INDEX_MEETINGS=meetings

# OpenAI (for AI-powered features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_WHISPER_MODEL=whisper-1

# Azure Cognitive Services (alternative STT)
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastus

# Google Cloud (alternative STT)
GOOGLE_APPLICATION_CREDENTIALS=./google-credentials.json

# SMTP Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=ChatVista
SMTP_FROM_EMAIL=noreply@chatvista.com

# TURN/STUN Servers
TURN_SERVER_URL=turn:localhost:3478
TURN_SERVER_USERNAME=chatvista
TURN_SERVER_CREDENTIAL=chatvista_turn_2024
STUN_SERVER_URL=stun:stun.l.google.com:19302

# MediaSoup
MEDIASOUP_LISTEN_IP=0.0.0.0
MEDIASOUP_ANNOUNCED_IP=127.0.0.1
MEDIASOUP_MIN_PORT=40000
MEDIASOUP_MAX_PORT=40100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Feature Flags
ENABLE_E2E_ENCRYPTION=true
ENABLE_AI_TRANSCRIPTION=true
ENABLE_AI_MINUTES=true
ENABLE_RECORDING=true
ENABLE_WHITEBOARD=true
ENABLE_POLLS=true
ENABLE_BREAKOUT_ROOMS=true

# Compliance
DEFAULT_DATA_RETENTION_DAYS=365
ENABLE_AUDIT_LOGGING=true
ENABLE_GDPR_COMPLIANCE=true
ENABLE_HIPAA_COMPLIANCE=false
